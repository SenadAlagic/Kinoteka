@page
@model MovieWebsite.Pages.MoviePages.EditModel
@{
	<h1 class="text-primary">Edit an existing movie</h1>
	<br />
	<form method="post">
		<input type="hidden" asp-for="Movie.Id" />
		<div class="text-danger" asp-validation-summary="ModelOnly"></div>
		<div class="container border" style="padding:30px;">
			<div class="row form-group">
				<div class="col-3">
					<label asp-for="Movie.Name"></label>
				</div>
				<div class="col 6">
					<input asp-for="Movie.Name" class="form-control" />
				</div>
				<span asp-validation-for="Movie.Name" class="text-danger col-3"></span>
			</div>
			<div class="row form-group">
				<div class="col-3">
					<label asp-for="Movie.Year"></label>
				</div>
				<div class="col 6">
					<input asp-for="Movie.Year" class="form-control" />
				</div>
				<span asp-validation-for="Movie.Year" class="text-danger col-3"></span>
			</div>
		</div>

		<div class="row form-group m-3">
			<div class="col-2 offset-8">
				<input type="submit" value="Update "class="btn btn-primary form-control" />
			</div>
			<div class="col-2">
				<a asp-page="Index" class="btn btn-success form-control">Back</a>
			</div>
		</div>

	</form>

}

@page
@model MovieWebsite.Pages.MoviePages.CreateModel
@{
	<h1 class="text-primary">Add a New Movie</h1>
	<br />
	<form method="post">
		<div class="text-danger" asp-validation-summary="ModelOnly"></div>
		<div class="container border" style="padding:30px;">
			<div class="form-group row">
				<div class="col-3">
					<label asp-for="Movie.Name"></label>
				</div>
				<div class="col-6">
					<input asp-for="Movie.Name" class="form-control" />
				</div>
				<span asp-validation-for="Movie.Name" class="text-danger col-3"></span>
			</div>
			<div class="form-group row">
				<div class="col-3">
					<label asp-for="Movie.Year"></label>
				</div>
				<div class="col-6">
					<input asp-for="Movie.Year" class="form-control" />
				</div>
				<span asp-validation-for="Movie.Year" class="text-danger col-3"></span>

			</div>
		</div>
		<div class="form-group row m-3">
			<div class="col-2 offset-8">
				<input type="submit" value="Add" class="btn btn-primary form-control" />
			</div>
			<div class="col-2">
				<a asp-page="Index" class="btn btn-success form-control">Back</a>
			</div>
		</div>
	</form>

}
@section Scripts{ 
	<partial name="_ValidationScriptsPartial" />
}
